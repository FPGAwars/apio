{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run apio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apio/__main__.py",
            "args": [
                "--version",
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/test-examples/ice40/alhambra-ii/icestudio-ledon"
        },
        {
            "name": "Attach remote debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Apio test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
                "test/integration/test_commands.py::test_with_colors_on_and_off"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
    ]
}