{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run apio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apio/__main__.py",
            "args": [
                "info",
                "system"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/test/example_projects/ice40/alhambra-ii/icestudio-ledon"
        },
        {
            "name": "Attach remote debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Run apio test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
                "test/unit_tests/utils/test_usb_util.py::test_device_summaries"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
    ]
}