{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run apio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apio/__main__.py",
            "args": [
                "test",
                "main_tb.sv"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "/Users/user/work1"
        },
        {
            "name": "Attach remote debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Run apio test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
                "test/unit_tests/utils/test_usb_util.py::test_device_summaries"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
    ]
}