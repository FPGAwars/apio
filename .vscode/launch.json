{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run apio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/apio/main.py",
            "args": [
                "test",
                "ledon_tb.v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/test-examples/TB/alhambra-ii/icestudio/ledon"
        },
        {
            "name": "Attach remote debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Run an apio test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-vv",
                "test/commands/test_apio_system.py::test_system"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
    ]
}